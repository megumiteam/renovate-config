{
  "name": "@digitalcube/renovate-config",
  "version": "1.0.0",
  "description": "Renovate configurations for Digitalcube Projects",
  "scripts": {
    "test": "renovate-config-validator",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "Digitalcube",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/megumiteam/renovate-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/megumiteam/renovate-config.git"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "github>hatena/renovate-config:automergePin",
        "github>hatena/renovate-config:automergeTypesMinor"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": [
        "every weekend"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    "storybook": {
      "extends": [
        "@digitalcube:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "@storybook/*"
        ],
        "automerge": true,
        "groupName": "Storybook"
      }]
    },
    "redux": {
      "extends": [
        "@digitalcube:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "redux*"
        ]
      }]
    },
    "aws-frontendjs": {
      "extends": [
        "@digitalcube:default"
      ],
      "packageRules": [{
        "packagePatterns": [
          "aws*",
          "amazon*"
        ],
        "groupName": "AWS Frontend SDKs"
      }]
    },
    "aws-cdk": {
      "extends": [
        "config:base"
      ],
      "timezone": "Asia/Tokyo",
      "schedule": ["every weekend"],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 3am on the first day of the month"
        ]
      },
      "packageRules": [
        {
          "packagePatterns": [
            "@aws-cdk/*",
            "aws-cdk"
          ],
          "automerge": true,
          "major": {
            "automerge": false
          },
          "groupName": "CDK-Resources"
        }
      ]
    },
    "examples": {
      "extends": [
        "config:base"
      ],
      "automerge": true,
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "lockFileMaintenance": {
        "enabled": true
      },
      "minor": {
        "groupName": "all dependencies"
      }
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }  
  },
  "devDependencies": {
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "renovate": "21.16.3",
    "semantic-release": "17.1.1"
  }
}
